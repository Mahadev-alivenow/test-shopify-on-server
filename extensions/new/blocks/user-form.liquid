<button is="party-button" id="pop-up">
  <span class="visually-hidden">Start the party!</span>
</button>
<div id="alivenow-game">
  <div id="pop-up-container">

    <form id="form">
  
      {%- if block.settings.heading -%}
      <h1>{{ block.settings.heading }}</h1>
      {%- endif -%}
  
  
      <div id="backdrop">
          <h2>GET 10% OFF</h2>
          <p>Sign with email to get 10% Discount code.</p>
          <div id="controls">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <br>
          </div>
          <div id="controls">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <br>
          </div>
          <div id="form-error">Email already exits,Try Another!</div>
          <button type="submit" id="submit-btn">Submit</button>
        </div>
    </form>
  
    <div id="thankyou-modal" class="modal">
      <div class="modal-content">
        <h2>Thank You!</h2>
        <p>Your form has been submitted successfully.</p>
        <button id="close-modal">Close</button>
      </div>
    </div>
  </div>

